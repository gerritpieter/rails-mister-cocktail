<h1> <%= @cocktail.name %> </h1>

<% @cocktail.doses.each do |dose| %>
  <h3><%= dose.ingredient.name %></h3>
  <h3><%= dose.description %></h3>
  <h3><%= link_to 'Remove', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></h3>
<% end %>


<%= link_to 'Go back to the cocktails list', root_path %> |
<%= link_to 'Add a new dose to this cocktail', new_cocktail_dose_path(@cocktail) %>

